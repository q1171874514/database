<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.database.modules.warehouse.dao.FolderFileDao">

    <resultMap type="com.example.database.modules.warehouse.entity.FolderFileEntity" id="folderFileMap">
        <result property="id" column="id"/>
        <result property="folderId" column="folder_id"/>
        <result property="fileId" column="file_id"/>
        <result property="fileName" column="file_name"/>
        <result property="creator" column="creator"/>
        <result property="createDate" column="create_date"/>
    </resultMap>

    <select id="getFileIdByFolderId" resultType="String">
		select distinct file_id from folder_file where folder_id in
        <foreach item="folderId" collection="array" open="(" separator="," close=")">
            #{folderId}
        </foreach>
	</select>

    <select id="getFolderIdByFileId" resultType="String">
		select distinct folder_id from folder_file where file_id in
        <foreach item="fileId" collection="array" open="(" separator="," close=")">
            #{fileId}
        </foreach>
	</select>

    <select id="isData" resultType="int">
        select 1 from folder_file
        <where>
            true
            <if test="folderId != null">
                and folder_id = #{folderId}
            </if>
            <if test="fileId != null">
                and file_id = #{fileId}
            </if>
        </where>
        limit 1
    </select>

    <delete id="deleteByFolderFile">
        delete from folder_file
        <where>
            true
            <if test="folderId != null">
                and folder_id in
                <foreach item="folderId" collection="folderId" open="(" separator="," close=")">
                    #{folderId}
                </foreach>
            </if>
            <if test="fileId != null">
                and file_id in
                <foreach item="fileId" collection="fileId" open="(" separator="," close=")">
                    #{fileId}
                </foreach>
            </if>
        </where>
    </delete>
</mapper>