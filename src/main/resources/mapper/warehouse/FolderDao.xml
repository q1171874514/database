<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.database.modules.warehouse.dao.FolderDao">

    <resultMap type="com.example.database.modules.warehouse.entity.FolderEntity" id="folderMap">
        <result property="id" column="id"/>
        <result property="warehouseId" column="warehouse_id"/>
        <result property="name" column="name"/>
        <result property="size" column="size"/>
        <result property="creator" column="creator"/>
        <result property="createDate" column="create_date"/>
        <result property="updater" column="updater"/>
        <result property="updateDate" column="update_date"/>
    </resultMap>

    <select id="getFolderIdByWarehouseId" resultType="String">
        select id from folder where warehouse_id in
        <foreach item="warehouseId" collection="array" open="(" separator="," close=")">
            #{warehouseId}
        </foreach>
    </select>

    <select id="getWarehouseIdByFolderId" resultType="String">
        select distinct warehouse_id from folder where id in
        <foreach item="folderId" collection="array" open="(" separator="," close=")">
            #{folderId}
        </foreach>
    </select>

</mapper>