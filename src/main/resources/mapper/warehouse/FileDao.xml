<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.database.modules.warehouse.dao.FileDao">

    <resultMap type="com.example.database.modules.warehouse.entity.FileEntity" id="fileMap">
        <result property="id" column="id"/>
        <result property="sysOssId" column="sys_oss_id"/>
        <result property="name" column="name"/>
        <result property="size" column="size"/>
        <result property="url" column="url"/>
        <result property="creator" column="creator"/>
        <result property="createDate" column="create_date"/>
        <result property="updater" column="updater"/>
        <result property="updateDate" column="update_date"/>
    </resultMap>

    <select id="getFolderIdById" resultType="String">
        select folder_id from file
        <where>
            id in
            <foreach item="ids" collection="array" open="(" separator="," close=")">
                #{ids}
            </foreach>
        </where>
    </select>

    <select id="isDataByOss" resultType="int">
        select 1 from file
        <where>
            sys_oss_id = #{sysOssId}
        </where>
        limit 1
    </select>

    <select id="getSysOssIdById" resultType="Long">
        select distinct sys_oss_id from file where id in
        <foreach item="folderId" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

</mapper>