<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.database.modules.warehouse.dao.WarehouseDao">

    <resultMap type="com.example.database.modules.warehouse.entity.WarehouseEntity" id="warehouseMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="size" column="size"/>
        <result property="creator" column="creator"/>
        <result property="createDate" column="create_date"/>
        <result property="updater" column="updater"/>
        <result property="updateDate" column="update_date"/>
    </resultMap>

    <update id="updateState">
        update warehouse set warehouse.state = #{state}
            <where>
                id in
                <foreach item="id" collection="id" open="(" separator="," close=")">
                    #{id}
                </foreach>
            </where>
    </update>

    <select id="isState" resultType="int">
        select 1 from warehouse
        <where>
            state=#{state} and id in
            <foreach item="id" collection="id" open="(" separator="," close=")">
                #{id}
            </foreach>
        </where>
        limit 1
    </select>
</mapper>